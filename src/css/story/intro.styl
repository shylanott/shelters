.intro
	margin 0 auto
	padding 6rem 1rem 3rem 1rem

	&__hed
		max-width 60rem
		margin 0 auto
		text-align center

	&__dek
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center

	.article-meta
		margin 0 auto 3rem auto
		font-family $national
		set-type-size('x-large')
		max-width $column-width
		padding 0 1rem

	&__byline
		margin-top 1rem
		text-align left
		set-type-size('x-large')

	&__time
		display block
		margin-top 1rem
		text-align left
