.movement
  margin-top 5rem
  .figure-legend
    display flex
    justify-content center
    align-items center
    font-family $national
    margin-top 0.5rem
    p
      set-type-size('small')
      margin 0
    .legend-size
      background-color $brown-dark
      width 4px
      height 4px
      margin 0 0.25rem
    .legend-color
      margin 0 0.25rem 0 0.75rem
      display flex
      justify-content center
      .legend-block
        width 4px
        height 4px
      &_import
        border-bottom 1px solid $black
        margin-bottom 8px
        .legend-block
          background-color $pink
          background-color: $blue-dark
          border-bottom 1px solid $bg
          border-right 1px solid $bg
      &_export
        border-top 1px solid $black
        margin-top 8px
        .legend-block
          background-color lighten($orange, 5)
          background-color: $orange
          border-top 1px solid $bg
          border-right 1px solid $bg
  .figure-container
    display flex
    flex-wrap wrap
    max-width 55rem
    margin 0 auto 2rem auto
    .grid-block
      flex 1 0 8%
      padding 0.25rem
      .name-div
        position relative
        display flex
        justify-content center
      .name
        set-type-size('x-small')
        font-family $national
        line-height 0.9
        text-align center
        &-upper
          color $brown-dark
          background-color rgba($bg, 0.7)
          padding 0.1rem
        &-lower
          color $bg
          font-weight bold
      .container
        display flex
        flex-direction column
        height 100%
        &-imports
          border-bottom 1px solid $black
          display flex
          flex-wrap wrap-reverse
          align-content flex-start
          height 50%
          z-index 0
          padding-bottom 1px
          .import
            width 4px
            height 4px
            background-color: $blue-dark
            border-top 1px solid $bg
            border-right 1px solid $bg
        &-exports
          display flex
          flex-wrap wrap
          height 50%
          align-content flex-start
          padding-top 1px
          .export
            width 4px
            height 4px
            border-bottom 1px solid $bg
            border-right 1px solid $bg
            background-color: lighten($orange, 5)
  .tooltip
    position absolute
    border 1px solid $brown-dark
    background-color $bg
    opacity 1
    pointer-events none
    box-shadow 0px 4px 4px rgba(0, 0, 0, 0.25)
    padding 0.2rem 0.5rem
    &.is-hidden
      opacity 0
    .tooltip-state
      font-family $tiempos
      margin 0
      text-align center
    .tooltip-dogs
      font-family $national
      set-type-size('root')
      margin 0
      span
        font-weight bold
