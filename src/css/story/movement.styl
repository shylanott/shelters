.movement
  margin-top 5rem
  .figure-legend
    display flex
    justify-content center
    align-items center
    font-family $national
    p
      set-type-size('small')
    .legend-size
      background-color $brown-dark
      width 4px
      height 4px
      margin 0 0.25rem
    .legend-color
      width 16px
      height 8px
      margin 0 0.25rem 0 0.75rem
      &_import
        background-color $pink
        border-bottom 1px solid $black
        margin-bottom 8px
      &_export
        background-color lighten($orange, 5)
        border-top 1px solid $black
        margin-top 8px
  .figure-container
    display flex
    flex-wrap wrap
    max-width $column-width
    margin 0 auto 2rem auto
    .grid-block
      flex 1 0 8%
      padding 0.25rem
      p
        margin 0 0 0.3rem 0
        set-type-size('x-small')
        font-family $national
        line-height 0.9
        text-align: center;
      .container
        display flex
        flex-direction column
        &-imports
          border-bottom 1px solid $black
          display flex
          flex-wrap wrap-reverse
          align-content flex-start
          height 50%
          .import
            width 2px
            height 2px
            background-color: darken($pink, 5)
        &-exports
          display flex
          flex-wrap wrap
          height 50%
          align-content flex-start
          .export
            width 2px
            height 2px
            background-color: lighten($orange, 5)
  .tooltip
    position absolute
    border 1px solid $brown-dark
    background-color $bg
    opacity 1
    pointer-events none
    box-shadow 0px 4px 4px rgba(0, 0, 0, 0.25)
    padding 0.2rem 0.5rem
    &.is-hidden
      opacity 0
    .tooltip-state
      font-family $tiempos
      margin 0
      text-align center
    .tooltip-dogs
      font-family $national
      set-type-size('root')
      margin 0
      span
        font-weight bold
